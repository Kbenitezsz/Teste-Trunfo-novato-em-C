#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

int main() {
    int opcao;
    char jogarNovamente;

    // Dados das cartas pré-definidas
    char pais1[] = "Brasil";
    int populacao1 = 214000000;
    float area1 = 8516000.0;
    float pib1 = 1600.0;
    int pontos1 = 50;
    float densidade1 = (float)populacao1 / area1;

    char pais2[] = "Japao";
    int populacao2 = 125000000;
    float area2 = 377975.0;
    float pib2 = 5000.0;
    int pontos2 = 40;
    float densidade2 = (float)populacao2 / area2;

    do {
        printf("\n=== MENU PRINCIPAL ===\n");
        printf("1. Iniciar jogo\n");
        printf("2. Ver regras\n");
        printf("3. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1: {
                int atributo;

                printf("\n--- Iniciando o jogo! ---\n");
                printf("Voce jogara com a carta do pais: %s\n", pais1);
                printf("O computador jogara com a carta do pais: %s\n\n", pais2);

                printf("Escolha um atributo para comparar:\n");
                printf("1 - Populacao\n2 - Area\n3 - PIB\n4 - Pontos Turisticos\n5 - Densidade Demografica\n");
                printf("Digite o numero do atributo: ");
                scanf("%d", &atributo);

                printf("\nComparando o atributo: ");
                switch (atributo) {
                    case 1:
                        printf("Populacao\n");
                        printf("%s: %d\n", pais1, populacao1);
                        printf("%s: %d\n", pais2, populacao2);
                        if (populacao1 > populacao2)
                            printf("Vencedor: %s\n", pais1);
                        else if (populacao2 > populacao1)
                            printf("Vencedor: %s\n", pais2);
                        else
                            printf("Empate!\n");
                        break;

                    case 2:
                        printf("Area\n");
                        printf("%s: %.2f km²\n", pais1, area1);
                        printf("%s: %.2f km²\n", pais2, area2);
                        if (area1 > area2)
                            printf("Vencedor: %s\n", pais1);
                        else if (area2 > area1)
                            printf("Vencedor: %s\n", pais2);
                        else
                            printf("Empate!\n");
                        break;

                    case 3:
                        printf("PIB\n");
                        printf("%s: %.2f bilhoes\n", pais1, pib1);
                        printf("%s: %.2f bilhoes\n", pais2, pib2);
                        if (pib1 > pib2)
                            printf("Vencedor: %s\n", pais1);
                        else if (pib2 > pib1)
                            printf("Vencedor: %s\n", pais2);
                        else
                            printf("Empate!\n");
                        break;

                    case 4:
                        printf("Pontos Turisticos\n");
                        printf("%s: %d\n", pais1, pontos1);
                        printf("%s: %d\n", pais2, pontos2);
                        if (pontos1 > pontos2)
                            printf("Vencedor: %s\n", pais1);
                        else if (pontos2 > pontos1)
                            printf("Vencedor: %s\n", pais2);
                        else
                            printf("Empate!\n");
                        break;

                    case 5:
                        printf("Densidade Demografica\n");
                        printf("%s: %.2f hab/km²\n", pais1, densidade1);
                        printf("%s: %.2f hab/km²\n", pais2, densidade2);
                        if (densidade1 < densidade2)
                            printf("Vencedor: %s (menor densidade)\n", pais1);
                        else if (densidade2 < densidade1)
                            printf("Vencedor: %s (menor densidade)\n", pais2);
                        else
                            printf("Empate!\n");
                        break;

                    default:
                        printf("Opcao invalida!\n");
                }

                // Pergunta se quer jogar novamente
                printf("\nDeseja jogar novamente? (S/N): ");
                scanf(" %c", &jogarNovamente);
                break;
            }

            case 2:
                printf("\n--- Regras do Jogo ---\n");
                printf("1. Voce escolhe um atributo para comparar.\n");
                printf("2. Ganha a carta com maior valor (exceto densidade, que vence o menor).\n");
                printf("3. Se os valores forem iguais, e empate.\n");
                jogarNovamente = 'S'; // volta para o menu
                break;

            case 3:
                printf("\nSaindo do jogo... Ate logo!\n");
                jogarNovamente = 'N';
                break;

            default:
                printf("\nOpcao invalida! Tente novamente.\n");
                jogarNovamente = 'S';
        }

    } while (jogarNovamente == 'S' || jogarNovamente == 's');

    return 0;
}
